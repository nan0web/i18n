{
	"name": "@nan0web/i18n",
	"version": "1.0.0",
	"description": "A tiny, zero-dependency i18n helper for Java•Script",
	"type": "module",
	"main": "src/index.js",
	"types": "types/index.d.ts",
	"bin": {
		"i18n": "scripts/cli.js"
	},
	"scripts": {
		"i18n": "node scripts/cli.js audit && node scripts/cli.js sync",
		"i18n:prod": "npx i18n audit && npx i18n sync",
		"test": "node --test",
		"test:coverage": "node --test --experimental-test-coverage --test-coverage-include=src/**/*.js",
		"build": "tsc",
		"playground": "node playground/main.js",
		"pre-commit": "npm test",
		"precommit": "npm test",
		"prepush": "npm test",
		"prepare": "husky"
	},
	"keywords": [
		"i18n",
		"internationalization",
		"translation",
		"localization"
	],
	"author": "ЯRаСлав YaRaSLove <support@yaro.page>",
	"license": "ISC",
	"packageManager": "pnpm@10.11.0",
	"devDependencies": {
		"@nan0web/db": "workspace:*",
		"@nan0web/db-fs": "workspace:*",
		"@nan0web/event": "workspace:*",
		"@nan0web/log": "workspace:*",
		"@nan0web/test": "workspace:*",
		"husky": "^9.1.7"
	},
	"peerDependencies": {
		"@nan0web/event": "^1.0.0",
		"@nan0web/db": "^1.0.0"
	}
}
